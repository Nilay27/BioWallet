{
  "extends": "../tsconfig.json",
  "include": ["./src", "./src/**/*.ts"],
  "compilerOptions": {
    "rootDir": "src",

    // If package.json type is unset or `commonjs`, use the following
    //"module":"ESNext",
    //"moduleResolution":"Bundler",

    // If package.json is set to `module`, use the following
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Always consult the package.json `exports` field for module resolution
    // ignore junk since this is examples
    "allowUnusedLabels": true,
    "noUnusedLocals": false,
  }
}
